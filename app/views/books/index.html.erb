<h1>Books</h1>
<table>
	<tr>
		<td>title</td>
		<td>body</td>
		<td>category</td>
		<td>date</td>
		<td>rating</td>
		<td>user</td>

	</tr>
	<% @books.each do |book| %>
	<tr>
		<td><%= book.title%></td>
		<td><%= book.body%></td>
		<td><%= book.category%></td>
		<td><%= book.date%></td>
		<td><%= book.rating%></td>
		<td><%= book.user.name %></td>
		<td><%= link_to 'Show', book %></td>
		<td><%= link_to 'Edit', edit_book_path(book) %></td>
		<td><%= link_to 'Destroy', book_path(book),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>
	</tr>
	<%end%>
</table>
